generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Models
// User table
model User {
  userID    String  @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String  @unique
  password String
  // A user can boorw zero/many books
  borrow Borrow[]
  // A user can receive zero/many notifications
  notif Notification[]
  // A user can do many Reservations
  reservation Reservation[]
}
// Books table
model Book{
  bookID    String  @id @default(auto()) @map("_id") @db.ObjectId
  title String
  author String
  description String?
  publicationYear Int
  ISBN String?
  state Boolean? @default(true)
  // A book is borrowed mzero/any times
  borrow Borrow[]
  // A book receives zero/many notifications
  notif Notification[] 
  // A book can is reserved zero/many times
  reservation Reservation[] 
}
// borrow table
model Borrow{
  borrowID    String  @id @default(auto()) @map("_id") @db.ObjectId
  borrowDate DateTime
  returnDate DateTime
  // A borrow is concerned to only one user
  userBorrowID String  @db.ObjectId
  userBrorrow User @relation(fields: [userBorrowID], references: [userID])
  // A borrow is concerned to only one book
  borrowBookID String  @db.ObjectId
  borrowBook Book @relation(fields: [borrowBookID], references: [bookID])
}
// notifications table
model Notification{
  notificationID    String  @id @default(auto()) @map("_id") @db.ObjectId
  message String
  // A notification concerns only one user
  userNotifID String @db.ObjectId
  userNotif User @relation(fields: [userNotifID],references: [userID])
  // A notification concerns only one book
  notifBookID String @db.ObjectId
  notifBook Book @relation(fields: [notifBookID],references: [bookID])
}
// model reservation
model Reservation{
  reservationID String  @id @default(auto()) @map("_id") @db.ObjectId
  // a reseravation concerns one and only one user
  userReserveID String @db.ObjectId
  userReserve User @relation(fields: [userReserveID],references: [userID])
  // a reseravation concerns one and only one book
  bookReserveID String @db.ObjectId
  bookReserve Book @relation(fields: [bookReserveID],references: [bookID])
  
}